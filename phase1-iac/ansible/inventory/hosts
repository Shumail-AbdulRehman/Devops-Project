# Ansible Inventory File
# Groups target hosts for configuration management

[all:vars]
ansible_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_python_interpreter=/usr/bin/python3

# Web servers
[webservers]
web1 ansible_host=10.0.1.10
web2 ansible_host=10.0.1.11

# Database servers
[dbservers]
db1 ansible_host=10.0.2.10

# Kubernetes nodes
[k8s_masters]
k8s-master-1 ansible_host=10.0.3.10

[k8s_workers]
k8s-worker-1 ansible_host=10.0.3.20
k8s-worker-2 ansible_host=10.0.3.21

[k8s:children]
k8s_masters
k8s_workers

# AWS hosts
[aws]
aws-node-1 ansible_host=<AWS_PUBLIC_IP>

# Azure hosts
[azure]
azure-node-1 ansible_host=<AZURE_PUBLIC_IP>

# GCP hosts
[gcp]
gcp-node-1 ansible_host=<GCP_PUBLIC_IP>

# Cloud groups
[cloud:children]
aws
azure
gcp

# Development environment
[development]
dev-server ansible_host=192.168.1.100

# Production environment
[production:children]
webservers
dbservers
k8s

# Group specific variables
[webservers:vars]
http_port=80
https_port=443

[dbservers:vars]
mysql_port=3306

[k8s:vars]
kubernetes_version=1.28.0
